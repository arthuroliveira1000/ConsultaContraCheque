      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>

    <div class="container" style="align:center; border:1px solid gray; width:400px; margin-top:100px; border-radius:20px;">
        <div style="margin-left: auto; margin-right: auto; width: 200px;">
            <div style="margin-left: auto; margin-right: auto; width:150px; margin-top:30px;">
            <img src="https://fbcdn-profile-a.akamaihd.net/hprofile-ak-xap1/v/t1.0-1/c7.0.160.160/p160x160/10478531_780403672022620_6886462637343905681_n.png?oh=fbbea10fbad5dca522e777e8099499ed&oe=55F21E56&__gda__=1442418369_dc580e17cd6db7972f0fb4e3cc3519de" alt="CWI Software Login" align="midlle">
            </div>
        <form class="form-signin" style="text-align:center;">
            <br>
            <label for="inputEmail" class="sr-only">E-mail</label>
            <input type="email" id="inputEmail" class="form-control" placeholder="Email address" required autofocus style="align:center;">
            <br>
            <label for="inputPassword" class="sr-only">Senha</label>
            <input type="password" id="inputPassword" class="form-control" placeholder="Password" required style="align:center;">
            <br>
            <button class="btn btn-lg btn-primary" type="submit" style="margin-bottom:30px;">Entrar</button>
            <br>
        </form>
        </div>    
    </div> <!-- /container -->
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="../../assets/js/ie10-viewport-bug-workaround.js"></script>
</body>
</html>