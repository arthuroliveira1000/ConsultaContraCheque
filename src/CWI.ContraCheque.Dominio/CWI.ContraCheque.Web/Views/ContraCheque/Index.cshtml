@model CWI.ContraCheque.Dominio.ContraChequeExibicao


<!--CONTRA CHEQUE-->

<div class="panel panel-default contra-cheque">
    <div class="panel-heading"><h3>Recibo de Pagamento de Salário</h3></div>
    <div class="panel-body">
        <table class="table table-condensed">
            <tr class="active">
                <td>
                    <strong>Conta</strong>
                </td>
                <td>
                    <strong>Nome do Funcionário</strong>
                </td>
                <td>
                    <strong>Centro de Custo</strong>
                </td>
                <td>
                    <strong>Data de Admissão</strong>
                </td>
                <td>
                    <strong>Conta de Pagamento</strong>
                </td>
            </tr>
            <tr>
                <td>
                    <h5>@Html.DisplayFor(model => model.Colaborador.CodigoColaborador)</h5>
                </td>
                <td>
                    <h5>@Html.DisplayFor(model => model.Colaborador.NomeColaborador)</h5>
                </td>
                <td>
                    <h5>@Html.DisplayFor(model => model.Colaborador.CentroCusto)</h5>
                </td>
                <td>
                    <h5>@Html.DisplayFor(model => model.Colaborador.DataAdmissao)</h5>
                </td>
                <td>
                    <h5>
                        @Html.DisplayFor(model => model.BancoColaborador.NomeBanco)
                        AG.: @Html.DisplayFor(model => model.BancoColaborador.Agencia)
                        CONTA: @Html.DisplayFor(model => model.BancoColaborador.Conta)
                    </h5>
                </td>
            </tr>
        </table>
    </div>
    <div class="panel-body">
        <!-- Table -->
        <table class="table table-condensed">
            <tr class="active">
                <td>
                    <strong>Conta</strong>
                </td>
                <td>
                    <strong>Descricão</strong>
                </td>
                <td>
                    <strong>Referência</strong>
                </td>
                <td>
                    <strong>Proventos</strong>
                </td>
                <td>
                    <strong>Descontos</strong>
                </td>

            </tr>
            @foreach (var contas in Model.Contas)
            {
                if (!contas.Tipo.Equals("T") && !contas.Tipo.Equals("L"))
                {
                    <tr>
                        <td>
                            <h5>@Html.DisplayFor(modelcontas => contas.CodigoConta)</h5>
                        </td>
                        <td>
                            <h5>@Html.DisplayFor(modelcontas => contas.Descricao)</h5>
                        </td>
                        <td>
                            <h5>@Html.DisplayFor(modelcontas => contas.ValorReferencia)</h5>
                        </td>
                        <td>
                            @if (contas.Tipo.Equals("P"))
                            {
                                <h5>@Html.DisplayFor(modelcontas => contas.Total)</h5>
                            }
                        </td>
                        <td>
                            @if (contas.Tipo.Equals("D"))
                            {
                                <h5>@Html.DisplayFor(modelcontas => contas.Total)</h5>
                            }
                        </td>
                    </tr>
                }

            }
        </table>
    </div>

    <div class="panel-body">
        <!-- Table -->
        <table class="table table-condensed">
            <tr class="active">

                <td>
                    <strong>Total de Proventos</strong>
                </td>
                <td>
                    <strong>Total de Descontos</strong>
                </td>
                <td>
                    <strong>Valor Líquido</strong>
                </td>
            </tr>
            <!--fazer verificação de campos vazios aqui nesta linha-->
            @foreach (var contas in Model.Contas)
            {
                <tr>
                    <td>
                        @if (contas.Descricao.Equals("TOTAL PROVENTOS") && contas.Tipo.Equals("T"))
                        {
                            <h5>@Html.DisplayFor(modelcontas => contas.Total)</h5>
                        }
                    </td>
                    <td>
                        @if (contas.Descricao.Equals("TOTAL DESCONTOS") && contas.Tipo.Equals("T"))
                        {
                            <h5>@Html.DisplayFor(modelcontas => contas.Total)</h5>
                        }
                    </td>
                    <td>
                        @if (contas.Descricao.Equals("TOTAL LIQUIDO") && contas.Tipo.Equals("L"))
                        {
                            <h5>@Html.DisplayFor(modelcontas => contas.Total)</h5>
                        }
                    </td>
                </tr>
            }
        </table>
    </div>

    <div class="panel-body">
        <!-- Table -->
        <table class="table table-condensed">
            <tr class="active">
                <td>
                    <strong>Salário Base</strong>
                </td>
                <td>
                    <strong>Salário Contrib INSS</strong>
                </td>
                <td>
                    <strong>Base FGTS</strong>
                </td>
                <td>
                    <strong>Valor FGTS</strong>
                </td>
                <td>
                    <strong>Base Cálculo IRRF</strong>
                </td>
            </tr>
            @foreach (var contas in Model.Contas)
            {
 
                    <tr>

                        @if (contas.Descricao.Equals("SALARIO FOLHA MENSAL") && contas.Tipo.Equals("T"))
                        {
                            <td>
                                <h5>@Html.DisplayFor(modelcontas => contas.Total)</h5>
                            </td>
                        }

                        <td>
                            @if (contas.Descricao.Equals("INSS") && contas.Tipo.Equals("T"))
                            {
                                <h5>@Html.DisplayFor(modelcontas => contas.Base)</h5>

                            }
                        </td>
                        <td>
                            @if (contas.Descricao.Equals("FGTS") && contas.Tipo.Equals("T"))
                            {
                                <h5>@Html.DisplayFor(modelcontas => contas.Base)</h5>

                            }
                        </td>

                        <td>
                            @if (contas.Descricao.Equals("INSS A RECOLHER") && contas.Tipo.Equals("T"))
                            {
                                <h5>@Html.DisplayFor(modelcontas => contas.Total)</h5>

                            }
                        </td>
                        <td>
                            @if (contas.Descricao.Equals("FGTS") && contas.Tipo.Equals("T"))
                            {
                                <h5>@Html.DisplayFor(modelcontas => contas.Total)</h5>

                            }
                        </td>
                        <td>
                            @if (contas.Descricao.Equals("IRRF") && contas.Tipo.Equals("T"))
                            {
                                <h5>@Html.DisplayFor(modelcontas => contas.Base)</h5>
                            }
                        </td>
                    </tr>
                
            }
        </table>
    </div>
</div>
